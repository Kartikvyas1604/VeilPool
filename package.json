{
  "name": "veilpool-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "routing-engine",
    "app",
    "packages/*"
  ],
  "scripts": {
    "dev:all": "concurrently \"pnpm dev:routing\" \"pnpm dev:app\"",
    "dev:routing": "pnpm --filter routing-engine dev",
    "dev:app": "pnpm --filter app dev",
    "build:programs": "anchor build",
    "test:programs": "anchor test",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  }
}
